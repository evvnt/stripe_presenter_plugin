<div id="<%= comp.id %>"
     class="v-plugin v-input v-stripe_credit_card_form"
     data-plugin-callback='StripeCreditCardForm'
     data-stripe-publishable-key="<%= comp.stripe_publishable_key %>"
     data-currency="<%= comp.currency %>"
     <% if comp.address_config %>data-address-config=<%= comp.address_config.to_json %><% end %>
>

    <div class="sr-payment-form v-grid mdc-layout-grid v-padding-bottom0-left0-right0-top0 v-component v-container">
      <div class="sr-field-error" id="card-errors" role="alert"></div>
      <div class="spinner hidden" id="spinner"></div>
      <div class="mdc-layout-grid__inner">

        <div class="v-column mdc-layout-grid__cell mdc-layout-grid__cell--span-6 v-padding- v-column--relative v-grid-column-align-left v-component v-container">
          <div id="card-number" class="input empty"></div>
          <label for="card-number" data-tid="elements_examples.form.card_number_label">Card number</label>
        </div>

        <div class="v-column mdc-layout-grid__cell mdc-layout-grid__cell--span-6 v-padding- v-column--relative v-grid-column-align-left v-component v-container">
          <div id="card-expiry" class="input empty"></div>
          <label for="card-expiry" data-tid="elements_examples.form.card_expiry_label">Expiration</label>
        </div>

        <div class="v-column mdc-layout-grid__cell mdc-layout-grid__cell--span-6 v-padding- v-column--relative v-grid-column-align-left v-component v-container">
          <div id="card-cvc" class="input empty"></div>
          <label for="card-cvc" data-tid="elements_examples.form.card_cvc_label">CVC</label>
        </div>

      </div>
    </div>

    <div class="sr-result hidden">
      <p>Payment completed<br /></p>
      <pre>
        <code></code>
      </pre>
    </div>
</div>